@page "/books"

@attribute [Authorize]

@inject IBookRepository _bookRepo
@inject NavigationManager navManager

<h4>Book List</h4>
<br />
<br />


@if (Books is null)
{
    <InfoComponent Message="Loading Books.." />
}
else
{
    <AuthorizeView Roles="Administrator">
        <a href="/books/create" class="btn btn-outline-success">
            <span class="oi oi-plus"></span> Create New Book
        </a>
        <br />
    </AuthorizeView>

    <table class="table table-responsive">
        <thead>
            <tr>
                <th></th>
                <th>Title</th>
                <th>Price</th>
                <th>Author</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Books)
            {
                <tr>
                    <td>
                        <img src="~/images/@book.Image" style="height:30px; width:30px"/>
                    </td>
                    <td>@book.Title</td>
                    <td>@book.Price</td>
                    <td>@(book.Author.FirstName + " " + book.Author.LastName)</td>
                    <td>
                        <a href="/books/view/@book.Id" class="btn btn-primary">
                            <span class="oi oi-book"></span> View
                        </a>

                        <AuthorizeView Roles="Administrator">
                            <a href="/books/update/@book.Id" class="btn btn-info">
                                <span class="oi oi-pencil"></span> Update
                            </a>
                            <a href="/books/delete/@book.Id" class="btn btn-danger">
                                <span class="oi oi-delete"></span> Delete
                            </a>
                        </AuthorizeView>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


@code{
    public IList<BookModel> Books { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Books = await _bookRepo.GetAll(Endpoints.BookUrl);
    }
}